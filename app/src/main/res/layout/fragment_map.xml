<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spencer.familymap.Fragments.MapFragment"
    android:id="@+id/mapFragment">

    <!-- TODO: Update blank fragment layout -->


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

    <RelativeLayout
        android:id="@+id/details"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/mapFragmentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="{fa-map-marker}"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mapFragmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_toRightOf="@id/mapFragmentIcon"
            android:text="Click on a Marker"
            android:textSize="16sp"/>
    </RelativeLayout>

</FrameLayout>
